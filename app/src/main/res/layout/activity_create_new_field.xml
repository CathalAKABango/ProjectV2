<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/barley"
    tools:context="android.projectv2.CreateNewField">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Fieldname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="32dp"
        android:hint="Field Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Crop"
        android:hint="Crop This Season"
        android:layout_below="@+id/Year"
        android:layout_alignStart="@+id/Year" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spray"
        android:hint="Spray being applied"
        android:layout_below="@+id/Crop"
        android:layout_alignStart="@+id/Crop" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateCropPlanted"
        android:hint="Date of crop planted"
        android:layout_below="@+id/spray"
        android:layout_alignStart="@+id/spray" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateofspraying"
        android:hint="Date of spraying"
        android:layout_below="@+id/dateCropPlanted"
        android:layout_alignStart="@+id/dateCropPlanted" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Comments"
        android:hint="General comments"
        android:layout_below="@+id/dateofspraying"
        android:layout_alignStart="@+id/dateofspraying" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Data"
        android:id="@+id/Savebutton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/dateofspraying"
        android:textColor="#2f1412"
        android:textSize="16sp"
        android:background="@drawable/buttondrable"
        android:shadowColor="#A8A8A8"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/Viewbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#2f1412"
        android:textSize="16sp"
        android:background="@drawable/buttondrable"
        android:shadowColor="#A8A8A8"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        android:text="Field area"
        android:editable="false"
        android:lines="1"
        android:layout_below="@+id/Comments"
        android:layout_alignStart="@+id/Comments" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Year"
        android:layout_below="@+id/Fieldname"
        android:layout_alignStart="@+id/Fieldname"
        android:hint="Year"
        />
</RelativeLayout>
