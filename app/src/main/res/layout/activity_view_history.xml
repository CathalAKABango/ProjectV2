<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.projectv2.ViewHistory">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Fieldname"
        android:hint="Field Name"
        android:layout_above="@+id/Crop"
        android:layout_toStartOf="@+id/Viewbutton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Crop"
        android:hint="Crop This Season"
        android:layout_above="@+id/spray"
        android:layout_alignStart="@+id/Fieldname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spray"
        android:hint="Spray being applied"
        android:layout_above="@+id/dateCropPlanted"
        android:layout_alignStart="@+id/Crop" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateCropPlanted"
        android:hint="Date of crop planted"
        android:layout_above="@+id/dateofspraying"
        android:layout_alignStart="@+id/spray" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateofspraying"
        android:hint="Date of spraying"
        android:layout_above="@+id/Comments"
        android:layout_alignStart="@+id/dateCropPlanted" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Comments"
        android:hint="General comments"
        android:layout_above="@+id/location"
        android:layout_alignStart="@+id/dateofspraying" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/Viewbutton"
        android:hint="General comments"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:text="Field Location"
        android:hint="Field Location"
        android:editable="false"
        android:lines="2"
        android:layout_above="@+id/Viewbutton"
        android:layout_alignStart="@+id/Comments" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_above="@+id/Fieldname"
        android:hint="search"
        android:layout_alignStart="@+id/Fieldname"
        android:text="search" />

</RelativeLayout>

